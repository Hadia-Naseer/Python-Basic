        "import csv\n",
        "\n",
        "fname = input('Enter the CSV file name: ')\n",
        "try:\n",
        "    file_path = f'/content/sample_data/{fname}'\n",
        "    with open(file_path, 'r') as csvfile:\n",
        "        reader = csv.reader(csvfile)\n",
        "        for row in reader:\n",
        "            print([item.upper() for item in row])\n",
        "except FileNotFoundError:\n",
        "    print(f'File cannot be opened at {file_path}: File not found.')\n",
